@model GestionClinic.Appointement

@{
    ViewBag.Title = "CreateAppointment";
}
<!DOCTYPE html>
<html>
<head>
    <title>Patient</title>
    <link rel="stylesheet" href="~/Content/css/StyleP3.css">
    <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Open+Sans:wght@300&display=swap" rel="stylesheet">
</head>
<header>
    <h1><span>Patient</span></h1>
    <nav>
        <ul>
            <li>@Html.ActionLink(" MyInfo", "PatientHome", "Patients", new { id = Session["userId"] }, null)</li>
            <li>@Html.ActionLink("Book Appointment ", "CreateAppointment", "Appointements", new { id = Session["userId"] }, null)</li>
            <li>@Html.ActionLink(" View Appointment", "ViewAppointment", "Appointements", new { id = Session["userId"] }, null)</li>
            <li>@Html.ActionLink("Logout", "Index", "home1")</li>

        </ul>
    </nav>

</header>
<body>

    <h2>New Appointment:</h2>

    @using (Html.BeginForm("AddAppointement", "Appointements", FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Appointement</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @type = "date" } })

            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Time, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Time, " ", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.doctor_ID, "doctor_ID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("doctor_ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.doctor_ID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.patient_ID, "patient_ID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.TextBox("patient ID ", (string)ViewBag.patient_ID, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
    }

    
    </body>
</html>